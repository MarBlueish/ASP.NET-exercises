@model ProjetoFinal.Models.Visita

@{
    ViewData["Title"] = "Criar";
}

<h1>Create</h1>

<h4>Visita</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id_Cliente" class="control-label"></label>
                <input asp-for="Id_Cliente" class="form-control" />
                <span asp-validation-for="Id_Cliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Id_Casa" class="control-label"></label>
                <input asp-for="Id_Casa" class="form-control" />
                <span asp-validation-for="Id_Casa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
