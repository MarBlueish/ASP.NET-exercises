<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjetoFinal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjetoFinal.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <img src="~/img/imobiliaria.png" width="100px" height="40px" padding="5px"/>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" 
                            asp-area="" 
                            asp-controller="Clientes"
                            asp-action="Index">Clientes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark"
                               asp-area=""
                               asp-controller="Visitas"
                               asp-action="Index">Visitas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark"
                               asp-area=""
                               asp-controller="Interesses"
                               asp-action="Index">Interesses</a>
                               </li>
                    </ul>
                </div>
                <span id="spaceSpan"></span>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <body>
        <div class="visita">
            <h4>Marque uma Visita conosco!</h4>
        </div>
        <div class="selection">
            
                <h4>Escolha uma opção:</h4>
                <button onclick="location.href='@Url.Action("Visita")'">Marcar Uma Visita</button>
                <button onclick="location.href='@Url.Action("Casa")>Casa</button>
                <button onclick="location.href='@Url.Action("Interesse", "Home")'">Interesse</button>
                <button onclick="location.href='@Url.Action("Clientes", "Home")'">Clientes</button>
            
        </div>
    </body>

    
    <footer class="border-top footer text-muted">
        <div class="container">
            <span class="mb-3 mb-0 text-muted">
                <a class="text-muted" href="https://github.com/MarBlueish">
                    Marco Gonçalves
                </a>
            </span>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
