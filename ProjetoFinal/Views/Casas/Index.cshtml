@model IEnumerable<ProjetoFinal.Models.Casa>

@{
    ViewData["Title"] = "Casas";
}

<h1>Ver casas</h1>

<p>
    <a asp-action="Create">Adicionar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Zona)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.N_Assoalhadas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ano)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Id_Cliente)
            </th>
            <th></th>
        </tr>
        <style>
            .image-grid {
                display: grid;
                grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
                grid-gap: 16px;
            }

                .image-grid img {
                    width: 100%;
                    height: 200px; 
                    object-fit: cover; 
                    border: 1px solid #ddd;
                    border-radius: 8px;
                    cursor: pointer;
                }
        </style>
        <script>
            function redirecionarParaCasas() {
                window.location.href = '/Casas/Create'; 
            }
        </script>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Zona)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.N_Assoalhadas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ano)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id_Cliente)
            </td>
        </tr>
}
    </tbody>
</table>
<div class="image-grid">
    <img src="~/img/casa1.jpg" alt="Imagem 1" onclick="redirecionarParaCasas()"/>
    <img src="~/img/casa2.jpg" alt="Imagem 2" onclick="redirecionarParaCasas()" />
    <img src="~/img/casa3.jpg" alt="Imagem 3" onclick="redirecionarParaCasas()" />
    <img src="~/img/casa4.jpg" alt="Imagem 4" onclick="redirecionarParaCasas()" />
    <img src="~/img/casa5.jpg" alt="Imagem 5" onclick="redirecionarParaCasas()" />

</div>